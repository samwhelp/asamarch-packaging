pkgname=asamos-hello
pkgver=0.1
pkgrel=1
pkgdesc="Asamos Hello Script"
url="https://github.com/samwhelp/asamos-packaging/tree/repo/main/demo/asamos-hello"
arch=('any')
license=('MIT')
makedepends=()
depends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)

prepare () {
	cp -af ../asset/. "${srcdir}"
}


package () {

	## Path
	local sys_bin_dir_path="${pkgdir}/usr/bin"
	local sys_share_dir_path="${pkgdir}/usr/share/${pkgname}"

	## prepare share dir
	mkdir -p "$sys_share_dir_path"

	## install main script
	## /usr/bin/asamos-hello
	install -Dm755 "${srcdir}/bin/${pkgname}" "${sys_bin_dir_path}/${pkgname}"

}
