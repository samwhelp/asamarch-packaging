pkgname=asamos-mirrorlist
pkgver=0.1
pkgrel=1
pkgdesc="Asamos Mirrorlist"
url="https://github.com/samwhelp/asamarch-packaging/tree/pack/main/base/asamos-mirrorlist"
arch=('any')
license=('MIT')
makedepends=()
depends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)

prepare () {
	cp -af ../asset/. "${srcdir}"
}


package () {

	## Path
	#local sys_etc_dir_path="${pkgdir}/etc"
	#local sys_share_dir_path="${pkgdir}/usr/share/${pkgname}"

	## prepare share dir
	#mkdir -p "$sys_etc_dir_path"
	#mkdir -p "$sys_share_dir_path"


	## install mirrorlist
	## /etc/pacman.d/asamos-mirrorlist
	install -Dm644 "${srcdir}/etc/pacman.d/${pkgname}" "${pkgdir}/etc/pacman.d/${pkgname}"

}
